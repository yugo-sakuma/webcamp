<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @new_book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class='table'>
        <tr>
          <td>
            <%= link_to(@book.user) do %>
              <%= image_tag @book.user.get_profile_image, size: "100x100" %><br>
              <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td>
            <% if current_user.favorites.exists?(book_id: @book.id) %>
              <%= link_to '♡', book_favorite_path(@book), method: :delete, class: 'favorite-icon', style: 'color: red;' %>
              <span class="favorite-icon" style="color: red;"><%= @book.favorites.count %></span>
            <% else %>
              <%= link_to '♡', book_favorite_path(@book), method: :post, class: 'not-favorite-icon', style: 'color: blue;' %>
              <span class="not-favorite-icon" style="color: blue;"><%= @book.favorites.count %></span>
            <% end %>
          </td>
          <td>
            <p>コメント数: <%= @book.book_comments.count %></p>
          </td>
          <% if current_user.id == @book.user.id %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %></td>
          <% end %>
        </tr>
      </table>
      
      <% @book.book_comments.each do |comment| %>
        <div class="row mb-2" style="padding: 12px;">
          <div class="col-md-3">
            <%= link_to(comment.user) do %>
              <%= image_tag comment.user.get_profile_image, size: "100x100" %><br>
              <%= comment.user.name %>
            <% end %>
          </div>
          <div class="col-md-6">
            <%= comment.comment %>
          </div>
          <% if comment.user == current_user %>
            <div class="col-md-2">
              <%= link_to 'Destroy', book_book_comment_path(@book, comment), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-sm btn-danger" %>
            </div>
          <% end %>
        </div>
      <% end %>
      
      <%= form_with(model: [ @book, @book.book_comments.build ], local: true) do |form| %>
        <div class="field">
          <%= form.label :comment %><br>
          <%= form.text_area :comment %>
        </div>
        <div class="actions">
          <%= form.submit "送信" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
